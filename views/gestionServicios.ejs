    <script>
        function completaAdmin(noCliente) {
            const litrosAdmin = document.getElementById(`litrosAdmin_${noCliente}`).value;
            const totalAdmin = document.getElementById(`totalAdmin_${noCliente}`).value;

        
            if (!litrosAdmin || !totalAdmin) {
                alert('Selecciona una opción antes de guardar.');
                return;
            }
        
            // Realizar una solicitud AJAX al servidor (Node.js) para guardar la opción en la base de datos
            $.post('/completaAdmin', { noCliente: noCliente, litrosAdmin: litrosAdmin, totalAdmin:totalAdmin }, function(data) {
                if (data.success) {
                    window.location.reload();
                } else {
                   window.location.reload();
                }
            });
        }

       

        function completaSum(noCliente){
            const litrosSum = document.getElementById(`litrosSum_${noCliente}`).value;
            const totalSum = document.getElementById(`totalSum_${noCliente}`).value;

            if(!litrosSum || !totalSum){
                alert('selecciona ruta antes de guardar');
                return;
            }

            $.post('/completaSum', { noCliente: noCliente, litrosSum: litrosSum,totalSum:totalSum }, function(data) {
                if (data.success) {
                    window.location.reload();
                } else {
                   window.location.reload();
                }
            });

        }
        
    </script>
    

